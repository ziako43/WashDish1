<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    android:orientation="vertical"
    android:scrollbarSize="50dp"
    tools:context=".Game">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/fon"
        android:backgroundTint="#0AF80F0F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="361dp"
            android:layout_height="361dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/posudav2"
            />

        <ImageView
            android:id="@+id/plateDirt"
            android:layout_width="365dp"
            android:layout_height="366dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/posudagryaz" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="610dp"
            android:src="@drawable/sponge"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="104dp"
            android:layout_height="102dp"
            app:srcCompat="@drawable/budilnic"


            />

        <TextView
            android:id="@+id/txtSecond"
            android:layout_width="103dp"
            android:layout_height="62dp"
            android:layout_marginLeft="1.7dp"
            android:layout_marginTop="39dp"

            android:text="60"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/now_score"
            android:layout_width="90dp"
            android:layout_height="87dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="15dp"

            android:text="Деньги: 0"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="bold" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>